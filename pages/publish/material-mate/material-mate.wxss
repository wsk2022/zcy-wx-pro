/* pages/publish/material-mate/material-mate.wxss */
.material-mate-page {
  background: linear-gradient(180deg, #C3DFFF 0%, #F5F6F8 20%);
  min-height: calc(100% - 44rpx);
  width: 100%;
  padding: 22rpx 32rpx;
}

.slogan {
  width: 638rpx;
  background: linear-gradient(80deg, #FFF8F2 0%, rgba(255, 255, 255, 0.24) 100%);
  border-radius: 12rpx 12rpx 12rpx 12rpx;
  padding: 12rpx 24rpx;
  margin-top: 20rpx;
  margin-bottom: 24rpx;
}

.left-icon {
  width: 40rpx;
  height: 40rpx;
}

.right-text {
  height: 34rpx;
  margin-left: 8rpx;
  font-size: 24rpx;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #FF7A00;
  line-height: 34rpx;
}

.card {
  width: 622rpx;
  padding: 34rpx 32rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  opacity: 1;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-family: PingFang SC-Bold, PingFang SC;
  font-weight: bold;
  color: #1D2129;
  line-height: 36rpx;
  padding-bottom: 10rpx;
}

.card-item {
  font-size: 28rpx;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #979797;
  line-height: 44rpx;
  margin-top: 8rpx;
}

.card-data {
  color: #1D2129;
}

.line {
  width: 638rpx;
  height: 1rpx;
  background: #F1F1F1;
  margin: 16rpx 0;
}

.ask-btn {
  background: #165DFF;
  border-radius: 200rpx;
  padding: 8rpx 26rpx;
  color: #fff;
}

.ask-icon {
  width: 32rpx;
  height: 26rpx;
  margin-right: 8rpx;
}

.btn-type {
  height: 32rpx;
  font-size: 20rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: #165DFF;
  line-height: 28rpx;
  padding: 4rpx 8rpx;
  background: #E8F3FF;
  margin-right: 16rpx;
}