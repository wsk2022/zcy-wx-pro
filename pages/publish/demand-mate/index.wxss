/* pages/publish/demand-mate/index.wxss */
.demand-mate-page {
  background: linear-gradient(180deg, #C3DFFF 0%, #F5F6F8 39%);
  min-height: calc(100% - 44rpx);
  width: 100%;
  padding: 22rpx 32rpx;
}

.card {
  width: 622rpx;
  padding: 34rpx 32rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  opacity: 1;
  border: 2rpx solid #D0DEFF;
}

.card-title {
  font-size: 32rpx;
  font-family: PingFang SC-Bold, PingFang SC;
  font-weight: bold;
  color: #1D2129;
  line-height: 36rpx;
  padding-bottom: 10rpx;
}

.card-item {
  font-size: 28rpx;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #979797;
  line-height: 44rpx;
  margin-top: 8rpx;
}

.card-data {
  color: #1D2129;
}

.slogan {
  width: 638rpx;
  background: linear-gradient(80deg, #FFF8F2 0%, rgba(255, 255, 255, 0.24) 100%);
  border-radius: 12rpx 12rpx 12rpx 12rpx;
  padding: 12rpx 24rpx;
  margin-top: 20rpx;
}

.left-icon {
  width: 40rpx;
  height: 40rpx;
}

.right-text {
  height: 34rpx;
  margin-left: 8rpx;
  font-size: 24rpx;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #FF7A00;
  line-height: 34rpx;
}

.data-item {
  margin-top: 20rpx;
  width: 622rpx;
  background: #FFFFFF;
  border-radius: 8rpx 8rpx 8rpx 8rpx;
  padding: 24rpx 32rpx;
}

.company-name {
  font-size: 32rpx;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #000000;
  line-height: 38rpx;
}

.company-icon {
  width: 28rpx;
  height: 26rpx;
  margin-left: 8rpx;
}

.company-address {
  font-size: 24rpx;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #9E9E9E;
  line-height: 28rpx;
}

.item-img {
  width: 194rpx;
  height: 194rpx;
}

.metaire-name {
  font-size: 28rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: #1D2129;
  line-height: 33rpx;
  padding-top: 8rpx;
}

.price-item {
  font-size: 24rpx;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #FF0000;
  line-height: 28rpx;
  padding-top: 8rpx;
}

.material-item {
  margin-right: 20rpx;
}

.material-item:nth-child(3) {
  margin-right: 0rpx;
}

.bottom-border {
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #F7F8FC;
}

.dis-top {
  padding-top: 28rpx;
}

.cover-name {
  font-size: 24rpx;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #86909C;
  line-height: 28rpx;
  padding-right: 10rpx;
}

.type-num {
  font-size: 24rpx;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #165DFF;
  line-height: 28rpx;
  padding-right: 16rpx;
}

.btn-type {
  font-size: 20rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: #165DFF;
  line-height: 28rpx;
  padding: 4rpx 8rpx;
  background: #E8F3FF;
}
.ask-btn{
  background: #165DFF;
  border-radius: 200rpx;
  padding: 8rpx 26rpx;
  color: #fff;
}
.ask-icon{
  width: 32rpx;
  height: 26rpx;
  margin-right: 8rpx;
}