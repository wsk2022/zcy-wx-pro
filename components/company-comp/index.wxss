.company-comp {
  background: #FFFFFF;
  border-radius: 6px;
  padding: 24rpx;
}
.company-comp .company-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.company-comp .company-head .company-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
  line-height: 40rpx;
  display: flex;
  align-items: center;
}
.company-comp .company-head .company-name image{ 
  width: 28rpx;
  height: 28rpx;
  margin-left: 8rpx;
}
.company-comp .company-head .share {
  height: 32rpx;
  width: 32rpx;
}

.company-comp .company-head .company-city { 
  font-size: 24rpx;
  font-weight: 500;
  color: #9E9E9E;
  line-height: 28rpx;
  white-space: nowrap;
}
.company-comp .content { 
  margin: 16rpx 0;
  display: flex;
  
}
.company-comp .content .goods-item {
  width: 200rpx;
  margin-right: 20rpx;
}
.company-comp .content .goods-item:last-child {
  margin-right: 0rpx;
}
.company-comp .content .goods-item image{ 
  width: 100%;
  max-height: 200rpx;
}
.company-comp .content .goods-item .goods-name{
  margin-top: 8rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #1D2129;
  line-height: 32rpx;
 }
 .company-comp .content .goods-item .goods-price{
  margin-top: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #FF0000;
  line-height: 28rpx;
 }

.company-comp .bottom {
  display: flex;
  justify-content: space-between;
  padding-top: 16rpx;
  border-top: 1px solid #F1F1F1;
}
.company-comp .bottom .action,
.company-comp  .status-box{
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}
.company-comp  .status{
  background: #E8F3FF;
  border-radius: 4rpx;
  font-size: 24rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: #165DFF;
  line-height: 32rpx;
  padding: 4rpx 8rpx;
  margin-right: 16rpx;
}
.company-comp  .orange{
  background: #FFEDE3;
  color: #FF8B27;
}
.company-comp .green{
  background: #E8FFEA;
  color: #00B42A;
}
.company-comp .purple {
  background: #F8E8FF;
  color: #BB3FF5;
}
.company-comp .blue {
  background: #E8F5FF;
  color: #00A3FF;
}
.company-comp  .text {
  white-space: nowrap;
  font-size: 24rpx;
  font-weight: 500;
  color: #86909C;
  line-height: 28rpx;
  margin-right: 16rpx;
}
.company-comp .text .num {
  display: inline;
  font-size: 24rpx;
  font-weight: 500;
  color: #165DFF;
  line-height: 28rpx;
}

.company-comp .bottom .phone { 
  display: flex;
  align-items: center;
  white-space: nowrap;
  margin-left: 24rpx;
  font-size: 24rpx;
  background: #165DFF;
  border-radius: 60rpx;
  padding: 12rpx 24rpx;
  color: #FFFFFF;
  font-size: 24rpx;
}

.company-comp .bottom .phone image {
  height: 24rpx;
  width: 24rpx;
  margin-right: 8rpx;
}
.company-comp .location {
  font-size: 24rpx;
  font-weight: 500;
  color: #86909C;
  line-height: 36rpx;
  display: flex;
  align-items: center;
}
.company-comp .location image{ 
  height: 40rpx;
  width: 40rpx;
  margin-right: 8rpx;
}